<?xml version="1.0" encoding="UTF-8"?>

<?xml-model href="khScripts_schema_New.rnc" type="application/relax-ng-compact-syntax"?>
<xml>
    <heading>
        <meta>
            <editor>Your name here</editor>
            <dateRange from="year-month-day" to="year-month-day"/>
        </meta>
        <gameInfo>
            <gameTitle>Kingdom Hearts I/II/III</gameTitle>
            <releaseDate>Game release date here</releaseDate>
            <dev>Square Enix</dev>
        </gameInfo>
        <sourceDesc>
            <creator>DJ Firewolf</creator>
            <source ref="(place url here)"/>
        </sourceDesc>
    </heading>
   
    <cutscene type="type of cutscene" cutNum="Number of Cutscene" location="World cutscene takes place in">
    <!-- Normal Cutscene Structure -->
        <desc>If there is a description of the cutscene put it in here</desc>
        <sp>
            <speaker>Speakers name</speaker>Follow by speech
            <q>quote if one appears</q>
        </sp>
    </cutscene>
    
    <cutscene type="type" cutNum="Num of Cutscene" location="World cutscene takes place in">
    <!-- Cutscene Structure if there is gameplay -->
        <desc>description of scene</desc>
            <sp>
                <speaker>Person</speaker>Speech
                <q>quotes</q>
            </sp>
    </cutscene>
    
    <cutscene type="type" cutNum="Num" location="World">
    <!-- Cutscenes towards the end of the scripts that are movies or special scenes -->
        <title>Cutscene Title if one appears</title>
        <desc>desc of scene</desc>
        <sp>
            <speaker>Person</speaker>Speech
            <q>quote</q>
        </sp>
        <gameTitle>Game title name</gameTitle>
        <dev>Square Enix</dev>
    </cutscene>
          
</xml>

